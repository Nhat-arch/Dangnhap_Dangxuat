<div class="overflow-x-auto relative">
  <div class="container text-center max-w-full">
    <div class="block font-bold mb-10 text-center">
      <a href="" class="p-5">Quản Lý Thành Viên</a>
    </div>
    <!-- <div class="block flex justify-end">
      <input type="text" name="" id="" class="border-1 border-gray-700 h-12 p-3">
      <button type="submit" class="bg-violet-500 hover:bg-violet-600">
        <a href=""></a>
      </button>
    </div> -->
    <div class="flex justify-center">
      <table class="border-collapse rounded-sm">
        <thead class="bg-indigo-500">
          <th class="px-6 py-4 text-center text-sm" scope="col">ID</th>
          <th class="px-6 py-4 text-center text-sm" scope="col">Email</th>
          <th class="px-6 py-4 text-center text-sm" scope="col">UserName</th>
          <th class="px-6 py-4 text-center text-sm" scope="col">Trạng Thái</th>
        </thead>
        <tbody class="bg-sky-500/75">
          <% listuser.forEach(user=> {
            %>
            <tr>
              <td class="px-6 py-4 text-center border-b-2 border-black">
                <%= user.iduser %>
              </td>
              <td class="px-6 py-4 text-center border-b-2 border-black">
                <%= user.email %>
              </td>
              <td class="px-6 py-4 text-center border-b-2 border-black">
                <%= user.username %>
              </td>
              <td class="px-6 py-4 text-center border-b-2 border-black">
                <a href="/user/create/<%= user.iduser %>" class="mr-4 text-pink-900">
                  Thêm
                  <i class="fa-solid fa-plus"></i>
                </a>
                <a href="/user/update/<%= user.iduser %>" class="mr-4 text-violet-900">
                  Sửa
                  <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a href="/user/del/<%= user.iduser %>" onclick="return confirm('Xóa người dùng này đúng không')"
                  class="mr-4 text-rose-900">
                  Xóa
                  <i class="fa-solid fa-delete-left"></i>
                </a>
                <a href="/user/reset/<%= user.iduser %>" class="text-blue-900">
                  Làm Mới Mật Khẩu<i class="fa-solid fa-repeat"></i>
                </a>
              </td>
            </tr>
            <%})%>
        </tbody>
      </table>
    </div>
  </div>
</div>